<% include partials/header %>


  <div class="ui main text container segment">

    <div class="ui huge header">New blogpost</div>

    <form class="ui form" action="/blogs" method="POST">

      <div class="field">
        <label for="title">Blog title</label>
        <input type="text" id="title" name="blog[title]" placeholder="Title of new blog">
      </div>

      <div class="field">
        <label for="title">Blog image</label>
        <input type="text" id="image" name="blog[image]" placeholder="Image for new blog">
      </div>

      <div class="field">
        <label for="text">Blog content</label>
        <textarea name="blog[body]" id="text" cols="30" rows="10" placeholder="Write you content here"></textarea>
      </div>

      <button class="ui teal button">Create</button>

    </form>


  </div>



<% include partials/header %>


  <div class="ui main text container segment">

    <div class="ui huge header">Edit [<%= blog.title %>]</div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">

      <div class="field">
        <label for="title">Blog title</label>
        <input type="text" id="title" name="blog[title]" value="<%= blog.title %>">
      </div>

      <div class="field">
        <label for="title">Blog image</label>
        <input type="text" id="image" name="blog[image]" value="<%= blog.image %>">
      </div>

      <div class="field">
        <label for="text">Blog content</label>
        <textarea name="blog[body]" id="text" cols="30" rows="10" ><%= blog.title %></textarea>
      </div>

      <button class="ui teal button">Save</button>

      <a href="/blogs/<%= blog._id %>" class="ui teal button basic">Back</a>

    </form>


  </div>


<% include partials/footer %>

{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"eqeqeq": [
			"error",
			"allow-null"
		],
		"no-console": [
			"error",
			{ "allow": ["log", "warn", "error"] }
		]
    }
}
